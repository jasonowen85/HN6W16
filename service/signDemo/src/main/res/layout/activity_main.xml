<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_get_sn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取SN"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/tv_sn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_get_vin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取VIN"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/tv_vin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_get_sign_bin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取Sign.bin内容"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/tv_sign_bin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_get_sign_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="获取Sign id"
            android:textSize="23sp" />

        <TextView
            android:id="@+id/tv_sign_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp" />
    </LinearLayout>


</ScrollView>